@model Models.Approvisionnement

@{
    ViewData["Title"] = "Nouvel Approvisionnement";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-box-seam"></i> Nouvel Approvisionnement</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Colonne gauche -->
                            <div class="col-md-6">

                                <div class="mb-3">
                                    <label asp-for="Reference" class="form-label fw-bold">
                                        <i class="bi bi-upc"></i> Référence <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Reference" class="form-control form-control-lg" placeholder="Ex: APP-2025-001" />
                                    <span asp-validation-for="Reference" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DateAppro" class="form-label fw-bold">
                                        <i class="bi bi-calendar"></i> Date d'approvisionnement <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DateAppro" type="date" class="form-control form-control-lg" />
                                    <span asp-validation-for="DateAppro" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FournisseurId" class="form-label fw-bold">
                                        <i class="bi bi-truck"></i> Fournisseur <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="FournisseurId" class="form-select form-select-lg" asp-items="ViewBag.Fournisseurs">
                                        <option value="">-- Sélectionner un fournisseur --</option>
                                    </select>
                                    <span asp-validation-for="FournisseurId" class="text-danger small"></span>
                                </div>

                            </div>

                            <!-- Colonne droite -->
                            <div class="col-md-6">

                                <div class="mb-3">
                                    <label asp-for="ArticleId" class="form-label fw-bold">
                                        <i class="bi bi-tag"></i> Article <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="ArticleId" class="form-select form-select-lg" asp-items="ViewBag.Articles">
                                        <option value="">-- Sélectionner un article --</option>
                                    </select>
                                    <span asp-validation-for="ArticleId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Quantite" class="form-label fw-bold">
                                        <i class="bi bi-123"></i> Quantité <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Quantite" type="number" min="1" class="form-control form-control-lg" id="quantite" />
                                    <span asp-validation-for="Quantite" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PrixUnitaire" class="form-label fw-bold">
                                        <i class="bi bi-cash"></i> Prix Unitaire <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="PrixUnitaire" type="number" step="0.01" class="form-control form-control-lg" id="prix" />
                                    <span asp-validation-for="PrixUnitaire" class="text-danger small"></span>
                                </div>

                            </div>
                        </div>

                        <!-- Montant total -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-calculator"></i> Montant Total
                            </label>
                            <input type="text" id="montantTotal" class="form-control form-control-lg bg-light" readonly />
                        </div>

                        <!-- Statut -->
                        <div class="mb-3">
                            <label asp-for="Statut" class="form-label fw-bold">
                                <i class="bi bi-flag"></i> Statut
                            </label>
                            <select asp-for="Statut" class="form-select form-select-lg">
                                <option value="1">Reçu</option>
                                <option value="2" selected>En attente</option>
                                <option value="3">Annulé</option>
                            </select>
                        </div>

                        <!-- Actif -->
                        <div class="mb-3 form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked style="width: 3em; height: 1.5em;" />
                            <label asp-for="IsActive" class="form-check-label fw-bold ms-2">
                                <i class="bi bi-check-circle"></i> Approvisionnement Actif
                            </label>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-save"></i> Enregistrer
                            </button>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function calculerTotal() {
            const q = parseFloat(document.getElementById("quantite").value) || 0;
            const p = parseFloat(document.getElementById("prix").value) || 0;
            document.getElementById("montantTotal").value = (q * p).toLocaleString() + " F";
        }

        document.getElementById("quantite").addEventListener("input", calculerTotal);
        document.getElementById("prix").addEventListener("input", calculerTotal);
    </script>
}
